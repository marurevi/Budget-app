<div class="w-screen h-20 px-2 bg-bluew text-white">
  <div class= 'flex flex-row justify-between items-center px-1'>
  <% if current_page? new_group_operation_path(@group) %>
    <%= link_to group_operations_path(@group) do %>
       <span class="material-icons md-light md-36 mt-4">arrow_back</span>
    <% end %>
    <% else %>
    <%= link_to groups_path do %>
      <span class="material-icons md-light md-36 mt-4">arrow_back</span>
      <% end %>
      <%= button_to "Logout", destroy_user_session_path, { data: { turbo: false }, class: 'btn-primary px-1 mt-1.5', method: :delete } %>
  <% end %>
  </div>
</div>
